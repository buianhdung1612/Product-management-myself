ul(class="pagination")
    if(currentPage > 1)
        li(class="page-item") 
            button(class="pagination__button" button-pagination=currentPage-1) <i class="fa-solid fa-angles-left"></i>
    - for(var i = 1; i <= totalPage; i++)
        li(class="page-item") 
            button(class="pagination__button" button-pagination=i) #{i}
    if(currentPage < totalPage)
        li(class="page-item") 
            button(class="pagination__button" button-pagination=currentPage+1) <i class="fa-solid fa-angles-right"></i>