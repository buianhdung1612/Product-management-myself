extends ../../layouts/default.pug
include ../../mixins/box-head.pug 

block main
    div(class="container")
        div(class="user")
            h1(class="user__title") #{pageTitle}
            form(class="user__form" action="/user/register" method="POST")
                .user__desc Đăng ký tài khoản
                input(type="text" placeholder="Họ và tên" name="fullName" required)
                input(type="email" placeholder="Email" name="email" required)
                input(type="password" placeholder="Mật khẩu" name="password" required class="form-password") 
                i(class="fa-solid fa-eye")
                button(type="submit" class="button user__button") Đăng ký