extends ../../layouts/default.pug
include ../../mixins/box-head.pug 

block main
    div(class="container")
        div(class="user")
            h1(class="user__title") #{pageTitle}
            form(class="user__form login" action="/user/login" method="POST")
                .user__desc Đăng nhập tài khoản của bạn
                input(type="email" placeholder="Email" name="email" required)
                input(type="password" placeholder="Mật khẩu" name="password" required class="form-password") 
                i(class="fa-solid fa-eye")
                a(href="/user/password/forgot" class="user__forgot-password") Quên mật khẩu?
                button(type="submit" class="button user__button") Đăng nhập