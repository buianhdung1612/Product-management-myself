doctype html
html
    head
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
        link(rel="stylesheet", href="/css/style.css")
        title #{pageTitle}
    body
        - if (messages.success)
            div(
                class="alert-success alert-message"
                alert-message
            ) #{messages.success}
        - if (messages.error)
            div(
                class="alert-danger alert-message"                                
                alert-message
            ) #{messages.error}

        include ../partials/header.pug

        block main

        include ../partials/footer.pug
        script(src="/js/script.js") 