        tr
            td(colspan="4")
              b Setting
        +permission([
              {
                  "data-name": "settings_view",
                  "data-content": "Xem"
              },
              {
                  "data-name": "settings_edit",
                  "data-content": "Chỉnh sửa"
              }
          ])
        //-   Hết Setting
