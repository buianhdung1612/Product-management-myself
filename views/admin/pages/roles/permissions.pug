          ])
          //- Hết Đơn hàng
          
          //- Nhóm quyền
          tr
            td(colspan="4")
              b Nhóm quyền

          +permission([
              {
                  "data-name": "roles_view",
                  "data-content": "Xem"
              },
              {
                  "data-name": "roles_create",
                  "data-content": "Thêm mới"
              },
              {
                  "data-name": "roles_edit",
                  "data-content": "Chỉnh sửa"
              },
              {
                  "data-name": "roles_delete",
