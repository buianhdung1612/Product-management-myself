extends ../../layouts/default.pug

block main
    div(class="block-main")
        h1 #{pageTitle}

        form(
            action=`/${prefixAdmin}/roles/edit/${role.id}?_method=PATCH`
            method="POST"
        )
            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    name="title"
                    id="title"
                    required 
                    value=role.title
                )
            div(class="form-group")
                label(for="desc") Mô tả
                textarea(
                    class="form-control"
                    textarea-mce
                    name="description"
                    id="desc"
                    rows="5"
                ) !{role.description}
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật