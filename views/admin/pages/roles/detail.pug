extends ../../layouts/default.pug

block main
    if(role.permissions.includes("roles_view"))
        div(class="block-main")
            .container.my-5
                .row.justify-content-center
                    .col-md-8
                        .card.shadow-sm(style="background-color: #f7f0e1;")
                            .card-body
                                if roleDetail.title
                                    h1.mb-3.text-primary.text-center #{roleDetail.title}
                                if role.permissions
                                    div.mb-4
                                        h5 Danh mục quyền:
                                        ul(class="list-group list-group-flush")
                                            //- Chia nhóm các quyền thành các mục trong danh sách
                                            if(roleDetail.permissions.includes("dashboard_view")) 
                                                li(class="list-group-item list-group-item-info") Xem trang tổng quan
                                            if(roleDetail.permissions.includes("products-category_view")) 
                                                li(class="list-group-item list-group-item-info") Xem trang danh mục sản phẩm
                                            if(roleDetail.permissions.includes("products-category_create")) 
                                                li(class="list-group-item list-group-item-success") Tạo mới danh mục sản phẩm
                                            if(roleDetail.permissions.includes("products-category_edit")) 
                                                li(class="list-group-item list-group-item-warning") Chỉnh sửa danh mục sản phẩm
                                            if(roleDetail.permissions.includes("products-category_delete")) 
                                                li(class="list-group-item list-group-item-danger") Xóa vĩnh viễn danh mục sản phẩm
                                            if(roleDetail.permissions.includes("products_view")) 
                                                li(class="list-group-item list-group-item-info") Xem trang sản phẩm
                                            if(roleDetail.permissions.includes("products_create")) 
                                                li(class="list-group-item list-group-item-success") Tạo mới sản phẩm
                                            if(roleDetail.permissions.includes("products_edit")) 
                                                li(class="list-group-item list-group-item-warning") Chỉnh sửa sản phẩm
                                            if(roleDetail.permissions.includes("products_delete")) 
                                                li(class="list-group-item list-group-item-danger") Xóa mềm và khôi phục sản phẩm
                                            if(roleDetail.permissions.includes("products_delete-destroy")) 
                                                li(class="list-group-item list-group-item-danger") Xóa vĩnh viễn sản phẩm
                                            if(roleDetail.permissions.includes("blogs-category_view")) 
                                                li(class="list-group-item list-group-item-info") Xem trang danh mục bài viết
                                            if(roleDetail.permissions.includes("blogs-category_create")) 
                                                li(class="list-group-item list-group-item-success") Tạo mới danh mục bài viết
                                            if(roleDetail.permissions.includes("blogs-category_edit")) 
                                                li(class="list-group-item list-group-item-warning") Chỉnh sửa danh mục bài viết
                                            if(roleDetail.permissions.includes("blogs-category_delete")) 
                                                li(class="list-group-item list-group-item-danger") Xóa vĩnh viễn danh mục bài viết
                                            if(roleDetail.permissions.includes("blogs_view")) 
                                                li(class="list-group-item list-group-item-info") Xem trang bài viết
                                            if(roleDetail.permissions.includes("blogs_create")) 
                                                li(class="list-group-item list-group-item-success") Tạo mới bài viết
                                            if(roleDetail.permissions.includes("blogs_edit")) 
                                                li(class="list-group-item list-group-item-warning") Chỉnh sửa bài viết
                                            if(roleDetail.permissions.includes("blogs_delete")) 
                                                li(class="list-group-item list-group-item-danger") Xóa mềm và khôi phục bài viết
                                            if(roleDetail.permissions.includes("blogs_delete-destroy")) 
                                                li(class="list-group-item list-group-item-info") Xóa vĩnh viễn bài viết
                                            if(roleDetail.permissions.includes("orders_view")) 
                                                li(class="list-group-item list-group-item-success") Xem trang đơn hàng
                                            if(roleDetail.permissions.includes("orders_edit")) 
                                                li(class="list-group-item list-group-item-warning") Duyệt đơn hàng
                                            if(roleDetail.permissions.includes("orders_delete")) 
                                                li(class="list-group-item list-group-item-danger") Xóa vĩnh viễn đơn hàng
                                            if(roleDetail.permissions.includes("roles_view")) 
                                                li(class="list-group-item list-group-item-info") Xem trang nhóm quyền
                                            if(roleDetail.permissions.includes("roles_create")) 
                                                li(class="list-group-item list-group-item-success") Tạo mới nhóm quyền
                                            if(roleDetail.permissions.includes("roles_edit")) 
                                                li(class="list-group-item list-group-item-warning") Chỉnh sửa nhóm quyền
                                            if(roleDetail.permissions.includes("roles_delete")) 
                                                li(class="list-group-item list-group-item-danger") Xóa vĩnh viễn nhóm quyền
                                            if(roleDetail.permissions.includes("roles_permissions")) 
                                                li(class="list-group-item list-group-item-info") Phân quyền
                                            if(roleDetail.permissions.includes("accounts_view")) 
                                                li(class="list-group-item list-group-item-info") Xem trang tài khoản
                                            if(roleDetail.permissions.includes("accounts_create")) 
                                                li(class="list-group-item list-group-item-success") Tạo mới tài khoản
                                            if(roleDetail.permissions.includes("accounts_edit")) 
                                                li(class="list-group-item list-group-item-warning") Chỉnh sửa tài khoản
                                            if(roleDetail.permissions.includes("accounts_delete")) 
                                                li(class="list-group-item list-group-item-danger") Xóa vĩnh viễn tài khoản
                                            if(roleDetail.permissions.includes("accounts_permissions")) 
                                                li(class="list-group-item list-group-item-info") Phân quyền
                                            if(roleDetail.permissions.includes("settings_view")) 
                                                li(class="list-group-item list-group-item-success") Xem trang cài đặt chung
                                            if(roleDetail.permissions.includes("settings_edit")) 
                                                li(class="list-group-item list-group-item-warning") Chỉnh sửa cài đặt chung
                                if roleDetail.description
                                    div.mb-4
                                        h5 Mô tả nhóm quyền
                                        p !{roleDetail.description}
