extends ../../layouts/default.pug
block main
    if(role.permissions.includes("settings_view")) 
        div(class="block-main")
            h1 #{pageTitle}

            form(
                action=`/${prefixAdmin}/settings/general?_method=PATCH`
                method="POST"
            )
                div(class="form-group")
                    label(for="websiteName") Tên website
                    input(
                        type="text"
                        class="form-control"
                        name="websiteName"
                        id="websiteName"
                        value=setting.websiteName
                    )
                div(class="form-group")
                    label(for="phone") Số điện thoại
                    input(
                        type="text"
                        class="form-control"
                        name="phone"
                        id="phone"
                        value=setting.phone
                    )
                div(class="form-group")
                    label(for="email") Email
                    input(
                        type="text"
                        class="form-control"
                        name="email"
                        id="email"
                        value=setting.email
                    )
                div(class="form-group")
                    label(for="address") Địa chỉ
                    input(
                        type="text"
                        class="form-control"
                        name="address"
                        id="address"
                        value=setting.address
                    )
                div(class="form-group")
                    label(for="copyright") Copyright
                    input(
                        type="text"
                        class="form-control"
                        name="copyright"
                        id="copyright"
                        value=setting.copyright
                    )
                div(class="form-group")
                    label(for="facebook") Facebook
                    input(
                        type="text"
                        class="form-control"
                        name="facebook"
                        id="facebook"
                        value=setting.facebook
                    )
                div(class="form-group")
                    label(for="twitter") Twitter
                    input(
                        type="text"
                        class="form-control"
                        name="twitter"
                        id="twitter"
                        value=setting.twitter
                    )
                div(class="form-group")
                    label(for="google") Google
                    input(
                        type="text"
                        class="form-control"
                        name="google"
                        id="google"
                        value=setting.google
                    )
                div(class="form-group")
                    label(for="youtube") Youtube
                    input(
                        type="text"
                        class="form-control"
                        name="youtube"
                        id="youtube"
                        value=setting.youtube
                    )
                div(class="form-group")
                    label(for="instagram") Instagram
                    input(
                        type="text"
                        class="form-control"
                        name="instagram"
                        id="instagram"
                        value=setting.instagram
                    )
                div(class="form-group")
                    button(
                        type="submit"
                        class="btn btn-primary"
                    ) Cập nhật
            